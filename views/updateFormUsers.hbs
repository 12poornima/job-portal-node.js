<link rel="stylesheet" href="/css/usersUpdate.css">
<h1>Update Form</h1>

    <div class="registration-form">
        <form action="/updateFormUsers" method="post" enctype="multipart/form-data" >
            <table>
               
                <tr>
                    <td>
                        ADDRESS:
                    </td>
                    <td>
                        <textarea name="Address" cols="30" rows="10" placeholder="Enter your current Adress"></textarea>
                    </td>
                </tr>
                <tr>

                    <td>
                        EXPERIENCE:
                    </td>
                    <td>
                        <textarea name="Experience" placeholder="Enter your experience" id="" cols="30" rows="10"></textarea>
                    </td>
                </tr>
        
                <tr>
                    <td>
                        SKILS:
                    </td>
                    <td>
                        <textarea name="Skills" id="" placeholder="enter your skills" cols="30" rows="10" ></textarea>
                    </td>
                </tr>
                <tr>
                    <td>
                         UPLOAD IMAGES:
                    </td>
                    <td>
                        <input type="file" name="Image" accept=".jpg" id="" >
                    </td>
                </tr>
                <tr>
                    <td>
                       UPLOAD RESUME:
                    </td>
                    <td>
                        <input type="file" name="Resume" accept=".pdf">
                    </td>
                </tr>


            </table>
            <button class="btn" type="submit">submit</button> 
        </form>
    </div>
