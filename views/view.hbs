                <h4>{{companyName}}</h4>
                <h3>{{Name}}</h3>
                <h3>{{Job_discription}}</h3>
                <h2>{{Experiencs}}</h2>
                <h5>Salary:{{Salary}}</h5>
                <h5>Last apply date:{{Last_apply_date}}</h5>
                <h5>{{Vacancies}}</h5>
                <h5>{{status}}</h5>
            </div>
