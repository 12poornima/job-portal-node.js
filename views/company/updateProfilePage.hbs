<link rel="stylesheet" href="/css/update.css">
<h1>Update Form</h1>
<div class="from">
    <form action="/company/updateProfile" method="post" enctype="multipart/form-data">
        <table>
            <tr>
                <td>
                    JOB TYPE:
                </td>
                <td>
                    <input type="text" name="companyType" placeholder="name">
                </td>
            </tr>
            <tr>
                <td>
                    JOB DISCRIPTION:
                </td>
                <td>
                    <textarea name="Discription" rows="10" placeholder="Discription"></textarea>
                </td>
            </tr>
            <tr>

                <td>
                    LOCATION:
                </td>
                <td>
                    <input type="text" name="Location" placeholder="Enter your current location">
                </td>
            </tr>
            <tr>
                <td>
                    COUNTRY
                </td>
                <td>
                    <input type="text" name="Country" placeholder="Country">
                </td>
            </tr>
            <tr>
                <td>
                    IMAGES:
                </td>
                <td>
                    <input type="file" name="Image" id="" accept=".jpg">
                </td>
            </tr>


        </table>
        <button class="btn" type="submit">submit</button>
    </form>
</div>