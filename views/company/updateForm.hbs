<h1>Update Form</h1>
<form action="">
    <div class="from">
        <form action="/company/addJob" method="post">
            <table>
                <tr>
                    <td>
                        JOB TYPE:
                    </td>
                    <td>
                        <input type="text" name="companyType" placeholder="name">
                    </td>
                </tr>
                <tr>
                    <td>
                        JOB DISCRIPTION:
                    </td>
                    <td>
                        <textarea name="Discription" rows="10" placeholder="Discription"></textarea>
                    </td>
                </tr>
                <tr>

                    <td>
                        LOCATION:
                    </td>
                    <td>
                        <input type="number" name="Location" placeholder="Enter your current location">
